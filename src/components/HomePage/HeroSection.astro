<script>
  const video = document.getElementById("myVideo");

  const forwardSrc = "src/assets/Video/herosection.mp4";
  const reverseSrc = "src/assets/Video/herosection.mp4";

  let isForward = true;

  function playVideo() {
    video.src = isForward ? forwardSrc : reverseSrc;
    video.playbackRate = 0.8; // slow motion is allowed
    video.play();
  }

  video.addEventListener("ended", () => {
    isForward = !isForward; // switch direction
    playVideo();
  });

  // Start
  playVideo();
</script>

